extends layout

block scripts
	script(src="/js/admin.js")
	script(src="/js/jquery.sortable.min.js")
		
block content
	.container
		.header
			a.logo(href="/")
				img(src="img/logo.png")
			h3 admin page
	
		.nav.row-fluid 
			a.navlink.active(href="#specials") specials
			a.navlink(href="#photos") photos
			a.navlink(href="#menus") menus
			a.navlink(href="#staff") staff

		.main
			#specials.tab
				h1 specials
				form.specials
					.row-fluid
						.span5
							textarea.width100(name="quote", placeholder="quote/announcement")
							br
							input.width100(type="text", name="person", placeholder="person")
						.span7
							ul.unstyled#editSpecs
								li.spec(draggable="true")
									input.input-small(type="text", name="type", placeholder="category")
									input(type="text", name="desc", placeholder="description")
									button.deleteSpec
										i.icon-remove
									button.moveSpec
										i.icon-resize-vertical
							button#newSpec
								i.icon-plus
					hr
					button(type="submit") save all
						
			#photos.tab.hide
				h1 photos
				form#addPhoto(method="post", action="/photo", enctype="multipart/form-data")
					input(type="file", name="upload")
					input(type="text", name="comment")
					button(type="submit")
						i.icon-ok
				hr
				#photoAdmin.row
					

			#menus.tab.hide
				h1 menus
				p not done yet	
			#staff.tab.hide
				h1 staff
				p not done yet


